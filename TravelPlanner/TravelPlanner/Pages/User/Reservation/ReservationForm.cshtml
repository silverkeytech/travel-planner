                        <label class="form-check-label">
                            Yes
                        </label>
                    </div>
                    <div class="form-check col-lg-2">
                        <input class="form-check-input" type="radio" name="TourGuide" id="noTourGuide" value="False" @(HttpContext.Session.GetString("_TourGuide") == "False" ? "checked" : "") />
