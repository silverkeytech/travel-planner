@page "/{TripType}/Form"
@model TravelPlanner.Pages.User.Reservation.ReservationFormModel
@{
    ViewData["Title"] = "Reservation";
}

@if (RouteData.Values["TripType"]?.ToString() == "Friends")
{
    <h1>PLAN A TRIP WITH YOUR FRIENDS</h1>
    <form method="post" asp-page-handler="Submit">
        <div class="form-group row my-3">
            <label class="col-lg-2 col-form-label">Enter number of adults</label>
            <div class="col-lg-2">
                <input type="number" class="form-control" name="NumberOfAdults" min="2" max="15" placeholder="2"
                       value="@(Model.friendsReservation?.NumberOfAdults ?? null)" />
            </div>
        </div>
        <div class="form-group row my-3">
            <label class="col-lg-3 col-form-label">Enter your nationalities</label>
            <div class="col-lg-3">
                <input type="text" class="form-control" placeholder="Nationalities" name="Nationalities"
                       value="@(Model.friendsReservation?.Nationalities ?? null)">
            </div>
            <small class="form-text text-muted">If there is more than one nationality, please separate them by a backslash "\" </small>
        </div>
        <fieldset class="form-group my-3">
            <div class="row">
                <span class="col-form-label col-lg-3 pt-0">Do you want a tour guide ?</span>
                <div class="col-lg-5 row">
                    <div class="form-check col-2">
                        <input class="form-check-input" type="radio" name="TourGuide" id="yesTourGuide" value="True" @(Model.friendsReservation?.TourGuide.ToString() == "True" ? "checked" : "") />
                        <label class="form-check-label">
                            Yes
                        </label>
                    </div>
                    <div class="form-check col-lg-2">
                        <input class="form-check-input" type="radio" name="TourGuide" id="noTourGuide" value="False" @(Model.friendsReservation?.TourGuide.ToString() == "False" ? "checked" : "") />
                        <label class="form-check-label">
                            No
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label text-muted" for="language" style="margin-left: 20px;">If "Yes", please choose the language desired:</label>
                <div class="col-lg-2">
                    <select class="form-control" id="languageDropdown" name="TourGuideLanguage">
                        @* @foreach (var item in model.apis)
                    {
                    <!option value="@item.apiid" @item.selectedstring>
                    @item.apititle
                    </!option>
                    } *@
                        @* opt-out character ("!") *@
                        <option disabled selected value="">Choose...</option>
                        <!option value="Arabic" @(Model.friendsReservation?.TourGuideLanguage.ToString() == "Arabic" ? "selected" : "")>Arabic</!option>
                        <!option value="English" @(Model.friendsReservation?.TourGuideLanguage.ToString() == "English" ? "selected" : "")>English</!option>
                        <!option value="German" @(Model.friendsReservation?.TourGuideLanguage.ToString() == "German" ? "selected" : "")>German</!option>
                        <!option value="Spanish" @(Model.friendsReservation?.TourGuideLanguage.ToString() == "Spanish" ? "selected" : "")>Spanish</!option>
                    </select>
                </div>
            </div>
        </fieldset>
        <div class="form-group row my-3">
            <div class="col-lg-4">
                <label class="col-form-label">Start Date</label>
                <div class="col-5">
                    <input type="date" class="form-control" name="StartDate"
                           value="@(!string.IsNullOrEmpty(Model.friendsReservation?.StartDate.ToString()) ? DateTime.Parse(Model.friendsReservation?.StartDate.ToString()).ToString("yyyy-MM-dd") : string.Empty)"
                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
            </div>
            <div class="col-lg-4">
                <label class="col-form-label">End Date</label>
                <div class="col-5">
                    @* Edit to make dates available are after the start date *@
                    <input type="date" class="form-control" name="EndDate"
                           value="@(!string.IsNullOrEmpty(Model.friendsReservation?.EndDate.ToString()) ? DateTime.Parse(Model.friendsReservation?.EndDate.ToString()).ToString("yyyy-MM-dd") : string.Empty)"
                           min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                </div>
            </div>
        </div>
        <div class="form-group row my-4">
            <label class="col-lg-4 col-form-label" for="siwaTransportation">Choose prefered method of transportation in Siwa</label>
            <div class="col-lg-2">
                <select class="form-control" id="siwaTransportation" name="siwaTransportation">
                    <option selected disabled value="">Choose...</option>
                    <!option value="CarVechile" @(Model.friendsReservation?.SiwaTransportation.ToString() == "CarVechile" ? "selected" : "")>Car vehicle</!option>
                    <!option value="Tuktuk" @(Model.friendsReservation?.SiwaTransportation.ToString() == "Tuktuk" ? "selected" : "")>Tuktuk</!option>
                    <!option value="Bicycle" @(Model.friendsReservation?.SiwaTransportation.ToString() == "Bicycle" ? "selected" : "")>Bicycle</!option>
                </select>
            </div>
        </div>
        <div class="form-group row my-4">
            <div class="row">
                <span class="col-form-label col-lg-2 pt-0">Choose currency</span>
                <div class="col-lg-5">
                    <div class="form-check col-lg-10">
                        <input class="form-check-input" type="radio" name="Currency" value="eur" @(Model.friendsReservation?.Currency == "eur" ? "checked" : "")>
                        <label class="form-check-label">
                            Euro (EUR)
                        </label>
                    </div>
                    <div class="form-check col-lg-10">
                        <input class="form-check-input" type="radio" name="Currency" value="usd" @(Model.friendsReservation?.Currency == "usd" ? "checked" : "")>
                        <label class="form-check-label">
                            United States dollar (USD)
                        </label>
                    </div>
                    <div class="form-check col-lg-10">
                        <input class="form-check-input" type="radio" name="Currency" value="egp" @(Model.friendsReservation?.Currency == "egp" ? "checked" : "")>
                        <label class="form-check-label">
                            Egyptian Pound (EGP)
                        </label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" id="normal-btn" class="btn" style="margin-left: 10px;">Continue<i class='fas fa-angle-right' style="margin-left: 3px;"></i></button>
            </div>
        </div>
    </form>
    <form method="post" asp-page-handler="Cancel">
        <div class="d-flex justify-content-end">
            <button type="submit" id="cancel-btn" class="btn" style="margin-top:0px;"> Cancel <i class="fa fa-times" aria-hidden="true" style="margin-left: 3px;"></i></button>
        </div>
    </form>
    <script>
        function initializeTourGuideToggle() {
            const yesTourGuide = document.getElementById("yesTourGuide");
            const noTourGuide = document.getElementById("noTourGuide");
            const languageDropdown = document.getElementById("languageDropdown");

            function updateLanguageDropdown() {
                if (yesTourGuide.checked) {
                    // Enable the select box
                    languageDropdown.disabled = false;
                } else {
                    languageDropdown.disabled = true;
                    languageDropdown.selectedIndex = 0;
                }
            }

            // Call the function to initialize the state
            updateLanguageDropdown();

            // Add change event listeners
            yesTourGuide.addEventListener("change", updateLanguageDropdown);
            noTourGuide.addEventListener("change", updateLanguageDropdown);
        }

        // Call the function when the DOM is ready
        document.addEventListener("DOMContentLoaded", initializeTourGuideToggle);
    </script>
}
