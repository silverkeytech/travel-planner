    <script>
        function initializeTourGuideToggle() {
            const yesTourGuide = document.getElementById("yesTourGuide");
            const noTourGuide = document.getElementById("noTourGuide");
            const languageDropdown = document.getElementById("languageDropdown");

            function updateLanguageDropdown() {
                if (yesTourGuide.checked) {
                    // Enable the select box
                    languageDropdown.disabled = false;
                } else {
                    languageDropdown.disabled = true;
                    languageDropdown.selectedIndex = 0;
                }
            }

            // Call the function to initialize the state
            updateLanguageDropdown();

            // Add change event listeners
            yesTourGuide.addEventListener("change", updateLanguageDropdown);
            noTourGuide.addEventListener("change", updateLanguageDropdown);
        }

        // Call the function when the DOM is ready
        document.addEventListener("DOMContentLoaded", initializeTourGuideToggle);
    </script>

}
