                    <!option value="CarVechile" @(HttpContext.Session.GetString("_SiwaTransportation") == "CarVechile" ? "selected" : "")>Car vehicle</!option>
                    <!option value="Tuktuk" @(HttpContext.Session.GetString("_SiwaTransportation") == "Tuktuk" ? "selected" : "")>Tuktuk</!option>
                    <!option value="Bicycle" @(HttpContext.Session.GetString("_SiwaTransportation") == "Bicycle" ? "selected" : "")>Bicycle</!option>
                </select>
            </div>
        </div>
        <div class="form-group row my-4">
            <div class="row">
                <span class="col-form-label col-lg-2 pt-0">Choose currency</span>
                <div class="col-lg-5">
                    <div class="form-check col-lg-10">
                        <input class="form-check-input" type="radio" name="Currency" value="eur" @(HttpContext.Session.GetString("_Currency") == "eur" ? "checked" : "")>
                        <label class="form-check-label">
                            Euro (EUR)
                        </label>
                    </div>
                    <div class="form-check col-lg-10">
                        <input class="form-check-input" type="radio" name="Currency" value="usd" @(HttpContext.Session.GetString("_Currency") == "usd" ? "checked" : "")>
                        <label class="form-check-label">
                            United States dollar (USD)
                        </label>
                    </div>
                    <div class="form-check col-lg-10">
