@page
@model AccommodationListModel

@{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/User/accommodation.css" asp-append-version="true" />
    <div class="search-bar">
        <i class="fas fa-search search-icon"></i>
        <input type="text" placeholder="Search for accommodation...">
    </div>
    <div class="accommodation-list">
        <div class="accommodation-card">
            <div class="card-content">
                <div class="card-content-left">
                    <img src="~/img/navbar-background.jpg" alt="hotel name" id="hotel-image"/>
                </div>
                <div class="card-content-right">
                    <div class="card-header">
                        <div class="hotel-title">
                            <h4>Taghaghien Island Resort</h4>
                        </div>
                        <div class="stars">
                            @for (var i = 0; i < 4; i++)
                            {
                                <span class="star-icon">★</span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-description">
                            <p>
                                Situated on a secluded island on Lake Siwa, this resort offers 
                                tranquillity and traditional Berber atmosphere. 
                                Featuring exquisite landscapes, the Taghaghien is 13 km from the centre of Siwa town.
                            </p>
                        </div>
                        <button class="details-button">Show Prices and Details</button>
                    </div>
                    <div class="card-footer">
                        <div>
                            <a href="@Url.Action("ShowOnMap","test.com")"><small>Show on the map</small></a>
                        </div>
                        <div class="facility-icons">
                            @for (var i = 0; i < 7; i++)
                            {
                                <i class="fas fa-wifi facility-icon"></i>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
