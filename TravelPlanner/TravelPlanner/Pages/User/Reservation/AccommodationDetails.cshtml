@page
@model AccommodationDetailsModel
@{
    <link rel="stylesheet" href="~/css/User/accommodation-details.css" asp-append-version="true" />
    <!-- Include the flag-icon-css stylesheet from a CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
    
    <!-- Include the flag icons (SVG files) from a CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/flags/flags.css">
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <h2>Taghaghien Island Resortaaaaa</h2>
                    </div>
                    <div class="col-auto">
                        @for (var i = 0; i < 5; i++)
                        {
                            <span class="star-icon">★</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Secondary Navigation Bar -->
                <ul class="nav nav-tabs justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" href="#info">Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#prices">Prices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#facilities">Facilities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#reviews">Reviews</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row mt-4 mb-5">
            <div class="col-md-6 d-flex">
                 <div class="card shadow">
                    <div class="card-body">
                        <!-- Map -->
                        <div class="map float-end">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10032.340104578168!2d-122.08375929004492!3d37.42199999999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fba60967c903d%3A0xe93b5db36bb7580c!2sGolden%20Gate%20Bridge!5e0!3m2!1sen!2sus!4v1630505271471!5m2!1sen!2sus"
                                width="100"
                                height="100"
                                style="border: 5px solid #f8f9fa; border-radius: 5px;"
                                allowfullscreen=""
                                loading="lazy">
                            </iframe>
                        </div>
                        <p>
                            Accommodation provided by the Taghaghien Resort consists of rooms and bungalows, which are decorated in a typical Egyptian style. Each is equipped with an en-suite bathroom.
                            <br>
                            Guests can explore the ancient village or visit the Holy Temple of Amoun. Other leisure options include swimming in the lake and safari.
                            <br>
                            Taghaghien Island Resort features an on-site restaurant, which offers an option of al fresco dining. Guests can have drinks outdoors, while enjoying the fresh breeze from the Great Sahara.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Image Board -->
                <div class="card fit-card  h-100">
                    <div class="card-body">
                        <div id="carouselImages" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block" src="~/img/navbar-background.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block" src="~/img/11.jpg" alt="Second slide">
                                </div>
                                @for(int i = 0; i < 0; i++)
                                {
                                    <div class="carousel-item">
                                        <img src="~/img/11.jpg" class="d-block" alt="Image">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselImages" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselImages" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <div class="row mb-4">
                    <div style="text-align: center;">
                        <h4>Enter dates to see prices and availability</h4>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="checkInDate">Check-In Date</label>
                            <input type="date" class="form-control" id="checkInDate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="checkOutDate">Check-Out Date</label>
                            <input type="date" class="form-control" id="checkOutDate">
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <button id="showPricesButton" class="btn btn-primary">Show Prices</button>
                </div>
                <div class="row justify-content-center">
                    <table id="pricesTable" class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Room Type</th>
                                <th>Guest Numbers</th>
                                <th>Price per Night</th>
                                <th style="width: 50px;">Select rooms</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Row 1 -->
                            <tr>
                                <td>Single Room</td>
                                <td>1 guest</td>
                                <td>$100</td>
                                <td>
                                    <input type="number" class="form-control form-control-sm" value="0" min="1">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row mt-3 justify-content-end d-flex">
                    <div class="text-end">
                        <button class="btn btn-primary">
                            Continue to Places to Visit
                            <i class="fas fa-arrow-right ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <!-- Accommodation Facilities Card -->
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Accommodation Facilities</h4>
                    <div class="row mt-5 justify-content-center">
                        @for(int i = 0; i < 10; i++)
                        {
                            <div class="col-4 col-sm-3 col-md-2">
                                <div class="text-center text-sm-center">
                                    <!-- Icon -->
                                    <i class="fas fa-utensils fa-2x"></i>
                                    <!-- Facility Name -->
                                    <p class="text-sm-center facility-name">Restaurant</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-5">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <h4 class="card-title text-center">Guest Reviews</h4>
                <div id="multiItemCarousel" class="carousel slide justify-content-center" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <!-- Item 1 -->
                        <div class="carousel-item active p-4">
                            <!-- Review Card 1 -->
                            <div class="card review-card">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <!-- Icon with person -->
                                        <div class="col-auto">
                                            <i class="fas fa-user-circle fa-3x"></i>
                                        </div>
                                        <!-- Guest Name -->
                                        <div class="col">
                                            <h5 class="card-title">Guest Name 1</h5>
                                            <!-- Country Name with Flag -->
                                            <p class="card-country">
                                                <span class="flag-icon flag-icon-us"></span> United States
                                            </p>
                                        </div>
                                        <!-- Rating -->
                                        <div class="col-auto">
                                            <!-- Rating with red hearts -->
                                            <div class="rating">
                                                <span class="heart">&hearts;</span>
                                                <span class="heart">&hearts;</span>
                                                <span class="heart">&hearts;</span>
                                                <!-- Add or remove hearts based on the rating -->
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Comment Box -->
                                    <div class="comment-box mt-3">
                                        <p class="card-text">Review comment aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa1</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Add more carousel items here -->
                        <!-- Item 1 -->
                        <div class="carousel-item p-4">
                            <!-- Review Card 1 -->
                            <div class="card review-card">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <!-- Icon with person -->
                                        <div class="col-auto">
                                            <i class="fas fa-user-circle fa-3x"></i>
                                        </div>
                                        <!-- Guest Name -->
                                        <div class="col">
                                            <h5 class="card-title">Guest Name 1</h5>
                                            <!-- Country Name with Flag -->
                                            <p class="card-country">
                                                <span class="flag-icon flag-icon-us"></span> United States
                                            </p>
                                        </div>
                                        <!-- Rating -->
                                        <div class="col-auto">
                                            <!-- Rating with red hearts -->
                                            <div class="rating">
                                                <span class="heart">&hearts;</span>
                                                <span class="heart">&hearts;</span>
                                                <span class="heart">&hearts;</span>
                                                <!-- Add or remove hearts based on the rating -->
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Comment Box -->
                                    <div class="comment-box mt-3">
                                        <p class="card-text">Great place</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#multiItemCarousel" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#multiItemCarousel" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const checkInDateInput = document.getElementById('checkInDate');
        const checkOutDateInput = document.getElementById('checkOutDate');
        const pricesTable = document.getElementById('pricesTable');
        const showPricesButton = document.getElementById('showPricesButton');

        function areDatesEntered() {
            return checkInDateInput.value && checkOutDateInput.value;
        }

        function toggleTableVisibility() {
            if (areDatesEntered()) {
                pricesTable.style.display = 'block';
            } else {
                pricesTable.style.display = 'none';
            }
        }

        checkInDateInput.addEventListener('click', function () {
            pricesTable.style.display = 'none';
        });

        checkOutDateInput.addEventListener('click', function () {
            pricesTable.style.display = 'none';
        });

        showPricesButton.addEventListener('click', function () {
            toggleTableVisibility();
        });
        // Initialize it empty
        toggleTableVisibility();

        $(document).ready(function () {
            $('#carouselImages').carousel();
    
            $('#carouselImages').carousel({
                interval: 2000
            });
    
            // Pause on hover
            $('#carouselImages').hover(function () {
                $(this).carousel('pause');
            }, function () {
                $(this).carousel('cycle');
            });

            $('.carousel-control-prev').click(function () {
                const targetCarouselId = $(this).attr('href');
                $(targetCarouselId).carousel('prev');
            });
    
            $('.carousel-control-next').click(function () {
                const targetCarouselId = $(this).attr('href');
                $(targetCarouselId).carousel('next');
            });
        });
        function initMap() {
            const myLatLng = { lat: 37.42199999999999, lng: -122.08375929004492 }; // Replace with your desired coordinates
            const map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 15 // Adjust the zoom level as needed
            });

            const marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'My Location' // Optional: Add a marker with a title
            });
        }
    </script>
}
