@page
@using TravelPlanner.Core.Accommodation
@model AccommodationDetailsModel
@{
    <link rel="stylesheet" href="~/css/User/accommodation-details.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/flags/flags.css">
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <h2>@Model.Accommodation.HotelName</h2>
                    </div>
                    <div class="col-auto">
                        @for (var i = 0; i < Model.Accommodation.NumberOfStars; i++)
                        {
                            <span class="star-icon">★</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Secondary Navigation Bar -->
                <ul class="nav nav-tabs justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" href="#info">Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#prices">Prices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#facilities">Facilities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#reviews">Reviews</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row mt-4 mb-5">
            <div class="col-md-6 d-flex">
                 <div class="card shadow">
                    <div class="card-body">
                        <div class="map float-end">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10032.340104578168!2d-122.08375929004492!3d37.42199999999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fba60967c903d%3A0xe93b5db36bb7580c!2sGolden%20Gate%20Bridge!5e0!3m2!1sen!2sus!4v1630505271471!5m2!1sen!2sus"
                                width="100"
                                height="100"
                                style="border: 5px solid #f8f9fa; border-radius: 5px;"
                                allowfullscreen=""
                                loading="lazy">
                            </iframe>
                        </div>
                        <p>@Model.Accommodation.LongDescription</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card fit-card  h-100">
                    <div class="card-body">
                        <div id="carouselImages" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @for (var i = 0; i < Model.Accommodation.ImagesPath.Count; i++)
                                {
                                    <div class="carousel-item @if (i == 0) { <text>active</text> }">
                                        <img class="d-block" src="@Model.Accommodation.ImagesPath[i]" alt="Slide @(i + 1)">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselImages" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselImages" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <div class="row mb-4">
                    <div style="text-align: center;">
                        <h4>Enter dates to see prices and availability</h4>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="checkInDate">Check-In Date</label>
                            <input type="date" class="form-control" id="checkInDate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="checkOutDate">Check-Out Date</label>
                            <input type="date" class="form-control" id="checkOutDate">
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <button id="showPricesButton" class="btn btn-primary">Show Prices</button>
                </div>
                <div class="row justify-content-center">
                    <table id="pricesTable" class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Room Type</th>
                                <th>Description</th>
                                <th>Guest Numbers</th>
                                <th>Price per Night</th>
                                <th style="width: 50px;">Select rooms</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* @foreach (var room in Model.Accommodation.Rooms)
                            {
                                <tr>
                                    <td>@room.RoomType</td>
                                    <td>@room.Description</td>
                                    <td>@room.Capacity</td>
                                    <td>@room.PricePerNight</td>
                                    <td>
                                        <input type="number" class="form-control form-control-sm" value="0" min="1">
                                    </td>
                                </tr>
                            } *@
                        </tbody>
                    </table>
                </div>
                <div class="row mt-3 justify-content-end d-flex">
                    <div class="text-end">
                        <button class="btn btn-primary">
                            Continue to Places to Visit
                            <i class="fas fa-arrow-right ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Accommodation Facilities</h4>
                    <div class="row mt-5 justify-content-center">
                        @foreach(var facility in Model.Accommodation.AccommodationFacilities)
                        {
                            var (icon, facilityName) = GetFacilityIcon(facility);

                            <div class="col-4 col-sm-3 col-md-2">
                                <div class="text-center text-sm-center">
                                    @Html.Raw(icon)
                                    <p class="text-sm-center facility-name">@facilityName</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-5">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <h4 class="card-title text-center">Guest Reviews</h4>
                <div id="multiItemCarousel" class="carousel slide justify-content-center" data-bs-ride="carousel">
                    <div class="carousel-inner">
                         @* @for (var i = 0; i < Model.Accommodation.AccommodationReviews.Count; i++)
                        {
                            var review = Model.Accommodation.AccommodationReviews[i];
                            <div class="carousel-item @if (i == 0) { <text>active</text> } p-4">
                                <div class="card review-card">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <i class="fas fa-user-circle fa-3x"></i>
                                            </div>
                                            <div class="col">
                                                <h5 class="card-title">@review.GuestName</h5>
                                                <p class="card-country">
                                                    <span class="flag-icon flag-icon-us"></span> United States
                                                </p>
                                            </div>
                                            <div class="col-auto">
                                                <div class="rating">
                                                    @for (var j = 0; j < review.Rate; j++)
                                                    {
                                                        <span class="heart">&hearts;</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="comment-box mt-3">
                                            <p class="card-text">@review.Comment</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        } *@
                    </div>
                    <a class="carousel-control-prev" href="#multiItemCarousel" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#multiItemCarousel" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const checkInDateInput = document.getElementById('checkInDate');
        const checkOutDateInput = document.getElementById('checkOutDate');
        const pricesTable = document.getElementById('pricesTable');
        const showPricesButton = document.getElementById('showPricesButton');

        function areDatesEntered() {
            return checkInDateInput.value && checkOutDateInput.value;
        }

        function toggleTableVisibility() {
            if (areDatesEntered()) {
                pricesTable.style.display = 'block';
            } else {
                pricesTable.style.display = 'none';
            }
        }

        checkInDateInput.addEventListener('click', function () {
            pricesTable.style.display = 'none';
        });

        checkOutDateInput.addEventListener('click', function () {
            pricesTable.style.display = 'none';
        });

        showPricesButton.addEventListener('click', function () {
            toggleTableVisibility();
        });
        // Initialize the table empty
        toggleTableVisibility();

        $(document).ready(function () {
            $('#carouselImages').carousel();
    
            $('#carouselImages').carousel({
                interval: 2000
            });
    
            // Pause on hover
            $('#carouselImages').hover(function () {
                $(this).carousel('pause');
            }, function () {
                $(this).carousel('cycle');
            });

            $('.carousel-control-prev').click(function () {
                const targetCarouselId = $(this).attr('href');
                $(targetCarouselId).carousel('prev');
            });
    
            $('.carousel-control-next').click(function () {
                const targetCarouselId = $(this).attr('href');
                $(targetCarouselId).carousel('next');
            });
        });
        @* map API *@
        @* function initMap() {
            const myLatLng = { lat: 37.42199999999999, lng: -122.08375929004492 }; // Replace with your desired coordinates
            const map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 15 // Adjust the zoom level as needed
            });

            const marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'My Location' // Optional: Add a marker with a title
            });
        } *@
    </script>
}

@functions {
    (string Icon, string FacilityName) GetFacilityIcon(AccommodationFacility facility)
    {
        string icon = "";
        string facilityName = "";

        switch (facility)
        {
            case AccommodationFacility.OutdoorSwimmingPool:
                icon = "<i class='fas fa-swimming-pool'></i>";
                facilityName = "Outdoor Swimming Pool";
                break;
            case AccommodationFacility.FreeParking:
                icon = "<i class='fas fa-parking'></i>";
                facilityName = "Free Parking";
                break;
            case AccommodationFacility.Restaurant:
                icon = "<i class='fas fa-utensils'></i>";
                facilityName = "Restaurant";
                break;
            case AccommodationFacility.SpaAndWellnessCentre:
                icon = "<i class='fas fa-spa'></i>";
                facilityName = "Spa and Wellness Centre";
                break;
            case AccommodationFacility.PetsAllowed:
                icon = "<i class='fas fa-dog'></i>";
                facilityName = "Pets Allowed";
                break;
            case AccommodationFacility.WIFI:
                icon = "<i class='fas fa-wifi'></i>";
                facilityName = "WIFI";
                break;
            case AccommodationFacility.RoomService:
                icon = "<i class='fas fa-concierge-bell'></i>";
                facilityName = "Room Service";
                break;
            case AccommodationFacility.BeachFront:
                icon = "<i class='fas fa-umbrella-beach'></i>";
                facilityName = "Beach Front";
                break;
            case AccommodationFacility.Breakfast:
                icon = "<i class='fas fa-coffee'></i>";
                facilityName = "Breakfast";
                break;
            default:
                break;
        }

        return (icon, facilityName);
    }
}
